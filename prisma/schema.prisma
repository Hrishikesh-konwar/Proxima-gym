generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  role     String
  name     String
  email    String  @unique
  password String
  gymId    String?
  gym      Gym?    @relation(fields: [gymId], references: [id])
}

model Gym {
  id      String  @id @default(cuid())
  name    String
  address String
  users   User[]  @ignore // ðŸ‘ˆ hidden from Prisma Client
}
